<?xml version="1.0"?>
<config>
    <modules>
        <MageProfis_CookieHint>
            <version>1.0.0.0</version>
        </MageProfis_CookieHint>
    </modules>   
    <frontend>
        <layout>
            <updates>
                <cookiehint>
                    <file>mageprofis-cookiehint.xml</file>
                </cookiehint>
            </updates>
        </layout>
        <routers>
            <cookiehint>
                <use>standard</use>
                <args>
                    <module>MageProfis_CookieHint</module>
                    <frontName>cookie-hint</frontName>
                </args>
            </cookiehint>
        </routers>
    </frontend>
    <global>
        <resources>
            <cookiehint_setup>
                <setup>
                    <module>MageProfis_CookieHint</module>
                    <class>MageProfis_CookieHint_Model_Resource_Setup</class>
                </setup>
            </cookiehint_setup>
        </resources>
    </global>    
</config>